<h1>Listing Professionals</h1>

<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Phone</th>
      <th>License</th>
      <th>Firmname</th>
      <th>Address</th>
      <th>Email</th>
      <th>Photo</th>
      <th>Description</th>
      <th>Established</th>
      <th>Returncurrentmonth</th>
      <th>Return1year</th>
      <th>Return3years</th>
      <th>Return5years</th>
      <th>Totalassets</th>
      <th>Minimumamount</th>
      <th>Volatility</th>
      <th>Sharperatio</th>
      <th>Standartdeviation</th>
      <th>Beta</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @professionals.each do |professional| %>
      <tr>
        <td><%= professional.firstname %></td>
        <td><%= professional.lastname %></td>
        <td><%= professional.phone %></td>
        <td><%= professional.license %></td>
        <td><%= professional.firmname %></td>
        <td><%= professional.address %></td>
        <td><%= professional.email %></td>
        <td><%= professional.photo %></td>
        <td><%= professional.description %></td>
        <td><%= professional.established %></td>
        <td><%= professional.returncurrentmonth %></td>
        <td><%= professional.return1year %></td>
        <td><%= professional.return3years %></td>
        <td><%= professional.return5years %></td>
        <td><%= professional.totalassets %></td>
        <td><%= professional.minimumamount %></td>
        <td><%= professional.volatility %></td>
        <td><%= professional.sharperatio %></td>
        <td><%= professional.standartdeviation %></td>
        <td><%= professional.beta %></td>
        <td><%= link_to 'Show', professional %></td>
        <td><%= link_to 'Edit', edit_professional_path(professional) %></td>
        <td><%= link_to 'Destroy', professional, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

